

<!-- NAVBAR -->
<%= render 'layouts/header' %>


<p id="notice"><%= notice %></p>


<div id="portfolio" class="container-fluid text-center bg-grey">
  <h2>Auto Showroom</h2><br>
  <h4>The Right Car at the Right Price</h4>
</div>

  <div class="text-center">
    <%= link_to 'Schedule a Test Drive', contact_path, class: "btn btn-primary" %>
  </div>

