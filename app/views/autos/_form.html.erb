<%= form_with(model: auto, local: true) do |form| %>
  <% if auto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(auto.errors.count, "error") %> prohibited this auto from being saved:</h2>

      <ul>
      <% auto.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<div class="container-fluid">  <!-- Panel Container -->

  <!-- Panel #1 -->

  <h2>Auto Information</h2>

  <div class="panel-group">   <!-- Panel Group -->
    <div class="panel panel-primary"> <!-- Panel #1 -->
      <div class="panel-heading">Auto Information</div>
      <div class="panel-body">  <!-- Panel Body -->

        <div class="row">
          <div class="col-sm-3" style="background-color:;">     

            <div class="field">
             <%= form.label :image %>
            </div>
            <div>
              <%= image_tag(@auto.image_url.to_s) %>
            </div>
             <div class="field">
              add an image....
              <%= form.file_field :image %>
            </div>
          </div>
          <!-- Use for additional photos -->
          <div class="col-sm-4"></div>
          <div class="col-sm-4"></div>
          <div class="col-sm-4"></div>
        </div> <!-- /Row --> 

        <div class="row">  <!-- Row --> 
          <div class="col-sm-2" style="background-color:;">

            <div class="field">
              <%= form.label :make %>
              <%= form.text_field :make, id: :auto_make %>
            </div>
          </div>

          <div class="col-sm-2" style="background-color:;">
            <div class="field">
              <%= form.label :model %>
              <%= form.text_field :model, id: :auto_model %>
            </div>
          </div>

          <div class="col-sm-2" style="background-color:;">
            <div class="field">
              <%= form.label :year %>
              <%= form.text_field :year, id: :auto_year %>
            </div>
          </div>
          <div class="col-sm-2">   
            <%= form.label :list_price %>
            <%= form.number_field :list_price, id: :auto_list_price %>
          </div>    
 
      </div> <!-- /Row -->  

      <div class="row">   <!-- Row -->  
          <div class="col-sm-3"></div>
          <div class="col-sm-3"></div>
          <div class="col-sm-3"></div>
      </div>  <!-- /Row -->  

        </div>  <!-- /Panel Body -->
      </div>   <!-- /Panel #1-->


    </div>    <!-- /Panel Group-->

 <!-- Panel #2 -->

    <div class="panel panel-info">
      <div class="panel-heading">Auto Details</div>
      <div class="panel-body">

        <div class="row">   <!-- Row -->  
          <div class="col-sm-2">
            <div class="field">
              <%= form.label :condition %>
              <%= form.text_field :condition, id: :auto_condition %>
            </div>
          </div>

          <div class="col-sm-2">
            <div class="field">
              <%= form.label :mileage %>
              <%= form.number_field :mileage, id: :auto_mileage %>
            </div>
          </div>
          

         

          <div class="col-sm-2">
            <div class="field">
              <%= form.label :trim %>
              <%= form.text_field :trim, id: :auto_trim %>
            </div>
          </div>  

        <div class="row">   <!-- Row -->  
          <div class="col-sm-2">
            <div class="field">
              <%= form.label :vin %>
              <%= form.number_field :vin, id: :auto_vin %>
            </div>
          </div>
        <div class="col-sm-2">   
          <%= form.label :user_id %>
          <%= form.text_field :user_id, id: :auto_user_id %>
        </div>

        </div>   <!-- /Row --> 

        <div class="row">    <!-- Row --> 
          <div class="col-sm-6">
            <div class="field">
              <%= form.label :auto_description %>
              <%= form.text_area :auto_description, id: :auto_auto_description %>
            </div>
          </div>
        </div>    <!-- /Row --> 


      </div>
    </div>

 <!-- Panel #3 -->


  <div class="panel panel-success">
    <div class="panel-heading">Sales Details</div>
    <div class="panel-body">

  <div class="row">    <!-- Row --> 
    <div class="col-sm-1"> 
      <div class="field">
        <%= form.label :featured %>
        <%= form.check_box :featured, id: :auto_featured %>
      </div>
    </div>
    <div class="col-sm-1"> 
      <div class="field">
        <%= form.label :sold %>
        <%= form.check_box :sold, id: :auto_sold %>
      </div>
    </div>
    <div class="col-sm-2"> 
      <div class="field">
        <%= form.label :price_sold %>
        <%= form.number_field :price_sold, id: :auto_price_sold %>
      </div>
    </div>
    <div class="col-sm-2"> 
      <div class="field">
        <%= form.label :purchase_price %>
        <%= form.number_field :purchase_price, id: :auto_purchase_price %>
      </div>
    </div>
    <div class="col-sm-2"> 
      <div class="field">
        <%= form.label :purchase_date %>
        <%= form.date_select :purchase_date, id: :auto_purchase_date %>
      </div>
    </div>

    <div class="col-sm-2"> 
      <div class="field">
        <%= form.label :date_sold %>
        <%= form.date_select :date_sold, id: :auto_date_sold %>
      </div>
     </div> 
    <div class="col-sm-2"> 
      <div class="field">
        <%= form.label :sold_by %>
        <%= form.text_field :sold_by, id: :auto_sold_by %>
      </div>
    </div>

    </div>   <!-- /Row --> 

    </div>  <!-- /body --> 
  </div>   <!-- /Panel --> 
    
</div> <!-- /End of Panel Container -->



  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
<br>



